<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="bi bi-bag"></i> Shopping Cart
            </h2>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-8">
            <!-- Cart Items -->
            <div class="card">
                <div class="card-body">
                    <div id="cart-items">
                        <!-- Cart items will be populated by JavaScript -->
                    </div>
                    
                    <div id="empty-cart" class="text-center py-5" style="display: none;">
                        <i class="bi bi-bag display-1 text-muted"></i>
                        <h4 class="text-muted mt-3">Your cart is empty</h4>
                        <p class="text-muted">Add some beautiful nails to get started!</p>
                        <a href="/products" class="btn btn-primary">
                            <i class="bi bi-bag-plus"></i> Start Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <!-- Cart Summary -->
            <div class="card" id="cart-summary" style="display: none;">
                <div class="card-header">
                    <h5 class="mb-0">Order Summary</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal:</span>
                        <span id="subtotal">$0.00</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tax:</span>
                        <span id="tax">$0.00</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping:</span>
                        <span id="shipping">$0.00</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Total:</strong>
                        <strong id="total">$0.00</strong>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <% if (isAuthenticated) { %>
                            <a href="/cart/checkout" class="btn btn-primary btn-lg" id="checkout-btn">
                                <i class="bi bi-credit-card"></i> Proceed to Checkout
                            </a>
                        <% } else { %>
                            <a href="/auth/login?redirect=/cart/checkout" class="btn btn-primary btn-lg">
                                <i class="bi bi-person"></i> Login to Checkout
                            </a>
                        <% } %>
                        <a href="/products" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-left"></i> Continue Shopping
                        </a>
                    </div>
                    
                    <div class="mt-3 text-center">
                        <small class="text-muted">
                            <i class="bi bi-truck"></i> Free shipping on orders over $50
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function renderCartItems() {
    const cart = getCart();
    const cartItemsContainer = document.getElementById('cart-items');
    const emptyCartDiv = document.getElementById('empty-cart');
    const cartSummary = document.getElementById('cart-summary');
    
    if (cart.length === 0) {
        cartItemsContainer.innerHTML = '';
        emptyCartDiv.style.display = 'block';
        cartSummary.style.display = 'none';
        return;
    }
    
    emptyCartDiv.style.display = 'none';
    cartSummary.style.display = 'block';
    
    cartItemsContainer.innerHTML = cart.map(item => `
        <div class="cart-item border-bottom py-3" data-product-id="${item.productId}" 
             data-size="${item.variant.size}" data-design="${item.variant.design}">
            <div class="row align-items-center">
                <div class="col-md-2">
                    <img src="${item.image}" alt="${item.title}" class="img-fluid rounded">
                </div>
                <div class="col-md-4">
                    <h6 class="mb-1">${item.title}</h6>
                    <small class="text-muted">Size: ${item.variant.size}, Design: ${item.variant.design}</small>
                </div>
                <div class="col-md-2">
                    <span class="fw-bold">$${item.price.toFixed(2)}</span>
                </div>
                <div class="col-md-2">
                    <div class="input-group input-group-sm">
                        <button class="btn btn-outline-secondary" type="button" onclick="updateQuantity('${item.productId}', ${JSON.stringify(item.variant)}, ${item.quantity - 1})">
                            <i class="bi bi-dash"></i>
                        </button>
                        <input type="number" class="form-control text-center" value="${item.quantity}" 
                               min="1" max="${item.maxQuantity || 10}" 
                               onchange="updateQuantity('${item.productId}', ${JSON.stringify(item.variant)}, parseInt(this.value))">
                        <button class="btn btn-outline-secondary" type="button" onclick="updateQuantity('${item.productId}', ${JSON.stringify(item.variant)}, ${item.quantity + 1})">
                            <i class="bi bi-plus"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-2 text-end">
                    <div class="fw-bold mb-2">$${(item.price * item.quantity).toFixed(2)}</div>
                    <button class="btn btn-sm btn-outline-danger" onclick="removeItem('${item.productId}', ${JSON.stringify(item.variant)})">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </div>
        </div>
    `).join('');
    
    updateSummary();
}

function updateQuantity(productId, variant, newQuantity) {
    if (newQuantity < 1) {
        removeItem(productId, variant);
        return;
    }
    
    updateCartItemQuantity(productId, variant, newQuantity);
    renderCartItems();
}

function removeItem(productId, variant) {
    if (confirm('Remove this item from your cart?')) {
        removeFromCart(productId, variant);
        renderCartItems();
        showToast('Item removed from cart', 'info');
    }
}

function updateSummary() {
    const cart = getCart();
    const subtotal = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
    const tax = subtotal * 0.08; // 8% tax
    const shipping = subtotal >= 50 ? 0 : 9.99; // Free shipping over $50
    const total = subtotal + tax + shipping;
    
    document.getElementById('subtotal').textContent = `$${subtotal.toFixed(2)}`;
    document.getElementById('tax').textContent = `$${tax.toFixed(2)}`;
    document.getElementById('shipping').textContent = shipping === 0 ? 'FREE' : `$${shipping.toFixed(2)}`;
    document.getElementById('total').textContent = `$${total.toFixed(2)}`;
}

// Initialize cart on page load
document.addEventListener('DOMContentLoaded', function() {
    renderCartItems();
});
</script>

