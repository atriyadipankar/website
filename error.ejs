<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="error-page">
                <% if (error.status === 404) { %>
                    <i class="bi bi-exclamation-triangle display-1 text-warning"></i>
                    <h1 class="display-4 fw-bold text-primary">404</h1>
                    <h3 class="mb-4">Page Not Found</h3>
                <% } else if (error.status === 403) { %>
                    <i class="bi bi-shield-exclamation display-1 text-danger"></i>
                    <h1 class="display-4 fw-bold text-primary">403</h1>
                    <h3 class="mb-4">Access Denied</h3>
                <% } else if (error.status === 500) { %>
                    <i class="bi bi-bug display-1 text-danger"></i>
                    <h1 class="display-4 fw-bold text-primary">500</h1>
                    <h3 class="mb-4">Server Error</h3>
                <% } else { %>
                    <i class="bi bi-exclamation-circle display-1 text-danger"></i>
                    <h1 class="display-4 fw-bold text-primary"><%= error.status || 'Error' %></h1>
                    <h3 class="mb-4">Something went wrong</h3>
                <% } %>
                
                <p class="lead text-muted mb-4"><%= message %></p>
                
                <div class="d-flex justify-content-center gap-3">
                    <a href="/" class="btn btn-primary">
                        <i class="bi bi-house"></i> Go Home
                    </a>
                    <button onclick="history.back()" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left"></i> Go Back
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.error-page {
    padding: 2rem;
}

.error-page i {
    margin-bottom: 1rem;
}

.error-page h1 {
    margin-bottom: 0.5rem;
}
</style>

