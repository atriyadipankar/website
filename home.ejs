                    <i class="bi bi-palette display-4 text-primary"></i>
                </div>
                <h5>Custom Designs</h5>
                <p class="text-muted">Unique designs created by professional nail artists for every style and occasion.</p>
            </div>
            <div class="col-md-4 text-center">
                <div class="feature-icon mb-3">
                    <i class="bi bi-truck display-4 text-primary"></i>
                </div>
                <h5>Fast Shipping</h5>
                <p class="text-muted">Free shipping on orders over $50. Get your nails delivered quickly and safely.</p>
            </div>
        </div>
    </div>
</section>

<!-- Featured Products -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h2 class="display-5 fw-bold mb-3">Featured Products</h2>
                <p class="lead text-muted">Our most popular and trending nail designs</p>
            </div>
        </div>
        
        <% if (products && products.length > 0) { %>
            <div class="row g-4">
                <% products.forEach(product => { %>
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="card h-100 border-0 shadow-sm">
                            <% if (product.images && product.images.length > 0) { %>
                                <% const primaryImage = product.images.find(img => img.isPrimary) || product.images[0] %>
                                <img src="<%= primaryImage.url %>" 
                                     alt="<%= product.title %>" 
                                     class="card-img-top product-image">
                            <% } else { %>
                                <div class="card-img-top product-image bg-light d-flex align-items-center justify-content-center">
                                    <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                                </div>
                            <% } %>
                            
                            <div class="card-body d-flex flex-column">
                                <h6 class="card-title mb-2"><%= product.title %></h6>
                                <p class="card-text text-muted small mb-2"><%= product.description.substring(0, 80) %>...</p>
                                
                                <!-- Rating -->
                                <div class="mb-2">
                                    <% for (let i = 1; i <= 5; i++) { %>
                                        <i class="bi bi-star<%= i <= product.rating.average ? '-fill' : '' %> star-rating"></i>
                                    <% } %>
                                    <span class="text-muted small">(<%= product.rating.count %>)</span>
                                </div>
                                
                                <!-- Colors -->
                                <div class="mb-2">
                                    <small class="text-muted">Colors: </small>
                                    <% product.colors.slice(0, 3).forEach(color => { %>
                                        <span class="badge bg-secondary me-1"><%= color %></span>
                                    <% }) %>
                                    <% if (product.colors.length > 3) { %>
                                        <span class="text-muted small">+<%= product.colors.length - 3 %> more</span>
                                    <% } %>
                                </div>
                                
                                <div class="mt-auto d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="h6 text-primary mb-0">$<%= product.price.toFixed(2) %></span>
                                        <% if (product.totalStock > 0) { %>
                                            <small class="text-success d-block">In Stock</small>
                                        <% } else { %>
                                            <small class="text-danger d-block">Out of Stock</small>
                                        <% } %>
                                    </div>
                                    <a href="/products/<%= product._id %>" class="btn btn-primary btn-sm">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
            
            <div class="text-center mt-5">
                <a href="/products" class="btn btn-primary btn-lg">
                    <i class="bi bi-grid"></i> View All Products
                </a>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="bi bi-box display-1 text-muted"></i>
                <h4 class="text-muted mt-3">No products available</h4>
                <p class="text-muted">Check back soon for our amazing nail collections!</p>
            </div>
        <% } %>
    </div>
</section>

