<div class="container py-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Products</li>
                </ol>
            </nav>
            <h2 class="mb-3"><%= title %></h2>
            
            <% if (results && results.total > 0) { %>
                <p class="text-muted">
                    Showing <%= results.start %>-<%= results.end %> of <%= results.total %> products
                </p>
            <% } %>
        </div>
    </div>
    
    <!-- Filters and Search -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="GET" class="row g-3">
                        <!-- Search -->
                        <div class="col-md-4">
                            <label class="form-label">Search</label>
                            <input type="text" class="form-control" name="search" 
                                   value="<%= query.search || '' %>" placeholder="Search products...">
                        </div>
                        
                        <!-- Category Filter -->
                        <div class="col-md-2">
                            <label class="form-label">Category</label>
                            <select class="form-select" name="category">
                                <option value="all" <%= query.category === 'all' || !query.category ? 'selected' : '' %>>All Categories</option>
                                <% categories.forEach(cat => { %>
                                    <option value="<%= cat %>" <%= query.category === cat ? 'selected' : '' %>>
                                        <%= cat.charAt(0).toUpperCase() + cat.slice(1) %>
                                    </option>
                                <% }) %>
                            </select>
                        </div>
                        
                        <!-- Color Filter -->
                        <div class="col-md-2">
                            <label class="form-label">Color</label>
                            <select class="form-select" name="color">
                                <option value="all" <%= query.color === 'all' || !query.color ? 'selected' : '' %>>All Colors</option>
                                <% colors.forEach(color => { %>
                                    <option value="<%= color %>" <%= query.color === color ? 'selected' : '' %>><%= color %></option>
                                <% }) %>
                            </select>
                        </div>
                        
                        <!-- Price Range -->
                        <div class="col-md-2">
                            <label class="form-label">Min Price</label>
                            <input type="number" class="form-control" name="minPrice" 
                                   value="<%= query.minPrice || '' %>" placeholder="$0" min="0" step="0.01">
                        </div>
                        
                        <div class="col-md-2">
                            <label class="form-label">Max Price</label>
                            <input type="number" class="form-control" name="maxPrice" 
                                   value="<%= query.maxPrice || '' %>" placeholder="$100" min="0" step="0.01">
                        </div>
                        
                        <!-- Sort -->
                        <div class="col-md-3">
                            <label class="form-label">Sort By</label>
                            <select class="form-select" name="sort">
                                <option value="newest" <%= query.sort === 'newest' || !query.sort ? 'selected' : '' %>>Newest First</option>
                                <option value="oldest" <%= query.sort === 'oldest' ? 'selected' : '' %>>Oldest First</option>
                                <option value="price_asc" <%= query.sort === 'price_asc' ? 'selected' : '' %>>Price: Low to High</option>
                                <option value="price_desc" <%= query.sort === 'price_desc' ? 'selected' : '' %>>Price: High to Low</option>
                                <option value="rating" <%= query.sort === 'rating' ? 'selected' : '' %>>Highest Rated</option>
                                <option value="name_asc" <%= query.sort === 'name_asc' ? 'selected' : '' %>>Name: A to Z</option>
                                <option value="name_desc" <%= query.sort === 'name_desc' ? 'selected' : '' %>>Name: Z to A</option>
                            </select>
                        </div>
                        
                        <!-- Filter Buttons -->
                        <div class="col-md-9 d-flex align-items-end gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-funnel"></i> Apply Filters
                            </button>
                            <a href="/products" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-clockwise"></i> Clear
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Products Grid -->
    <div class="row">
        <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <% if (product.images && product.images.length > 0) { %>
                            <% const primaryImage = product.images.find(img => img.isPrimary) || product.images[0] %>
                            <img src="<%= primaryImage.url %>" 
                                 alt="<%= product.title %>" 
                                 class="card-img-top product-image">
                        <% } else { %>
                            <div class="card-img-top product-image bg-light d-flex align-items-center justify-content-center">
                                <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                            </div>
                        <% } %>
                        
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title mb-2"><%= product.title %></h6>
                            <p class="card-text text-muted small mb-2">
                                <%= product.description.substring(0, 80) %><%= product.description.length > 80 ? '...' : '' %>
                            </p>
                            
                            <!-- Rating -->
                            <div class="mb-2">
                                <% for (let i = 1; i <= 5; i++) { %>
                                    <i class="bi bi-star<%= i <= Math.round(product.rating.average) ? '-fill' : '' %> star-rating"></i>
                                <% } %>
                                <span class="text-muted small">(<%= product.rating.count %>)</span>
                            </div>
                            
                            <!-- Category Badge -->
                            <div class="mb-2">
                                <span class="badge bg-secondary">
                                    <%= product.category.charAt(0).toUpperCase() + product.category.slice(1) %>
                                </span>
                            </div>
                            
                            <!-- Colors -->
                            <div class="mb-2">
                                <small class="text-muted">Colors: </small>
                                <% product.colors.slice(0, 2).forEach(color => { %>
                                    <span class="badge bg-light text-dark border me-1"><%= color %></span>
                                <% }) %>
                                <% if (product.colors.length > 2) { %>
                                    <span class="text-muted small">+<%= product.colors.length - 2 %> more</span>
                                <% } %>
                            </div>
                            
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="h6 text-primary mb-0">$<%= product.price.toFixed(2) %></span>
                                    <% if (product.totalStock > 0) { %>
                                        <small class="text-success d-block">
                                            <%= product.totalStock %> in stock
                                        </small>
                                    <% } else { %>
                                        <small class="text-danger d-block">Out of Stock</small>
                                    <% } %>
                                </div>
                                <a href="/products/<%= product._id %>" class="btn btn-primary btn-sm">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="bi bi-search display-1 text-muted"></i>
                    <h4 class="text-muted mt-3">No products found</h4>
                    <p class="text-muted">Try adjusting your search criteria or browse all products.</p>
                    <a href="/products" class="btn btn-primary">
                        <i class="bi bi-arrow-clockwise"></i> View All Products
                    </a>
                </div>
            </div>
        <% } %>
    </div>
    
    <!-- Pagination -->
    <% if (pagination && pagination.total > 1) { %>
        <div class="row mt-4">
            <div class="col-12">
                <nav aria-label="Products pagination">
                    <ul class="pagination justify-content-center">
                        <% if (pagination.hasPrev) { %>
                            <li class="page-item">
                                <a class="page-link" href="?<%= new URLSearchParams({...query, page: pagination.prev}).toString() %>">
                                    <i class="bi bi-chevron-left"></i> Previous
                                </a>
                            </li>
                        <% } %>
                        
                        <% 
                        const startPage = Math.max(1, pagination.current - 2);
                        const endPage = Math.min(pagination.total, pagination.current + 2);
                        %>
                        
                        <% if (startPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="?<%= new URLSearchParams({...query, page: 1}).toString() %>">1</a>
                            </li>
                            <% if (startPage > 2) { %>
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            <% } %>
                        <% } %>
                        
                        <% for (let i = startPage; i <= endPage; i++) { %>
                            <li class="page-item <%= i === pagination.current ? 'active' : '' %>">
                                <a class="page-link" href="?<%= new URLSearchParams({...query, page: i}).toString() %>">
                                    <%= i %>
                                </a>
                            </li>
                        <% } %>
                        
                        <% if (endPage < pagination.total) { %>
                            <% if (endPage < pagination.total - 1) { %>
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            <% } %>
                            <li class="page-item">
                                <a class="page-link" href="?<%= new URLSearchParams({...query, page: pagination.total}).toString() %>">
                                    <%= pagination.total %>
                                </a>
                            </li>
                        <% } %>
                        
                        <% if (pagination.hasNext) { %>
                            <li class="page-item">
                                <a class="page-link" href="?<%= new URLSearchParams({...query, page: pagination.next}).toString() %>">
                                    Next <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </div>
    <% } %>
</div>

